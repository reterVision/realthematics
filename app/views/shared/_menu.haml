%div{:class => "navbar navbar-fixed-top"}
  %div{:class => "navbar-inner"}
    %div{:class => "container-fluid"}
      = link_to "Real Thematics", home_feeds_path, :class=>"brand"
      - if session[:user_id]          
        %ul.nav
          %li{:class =>"#{'active' if params[:controller] == 'find_topics' }" }
            = link_to "Find Topics", find_topics_path, :class => "navbar-text"
          %li{:class =>"#{'active' if params[:controller] == 'my_topics' }" }
            = link_to "My Topics", my_topics_path, :class => "navbar-text"

        %ul{:class => "nav pull-right"}
          %li{:class => "dropdown #{'active' if params[:controller] == 'users' }"}
            %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
              = "#{session[:screen_name]}"
              %b{:class => "caret"}
            %ul{:class => "dropdown-menu"}
              %li
                = link_to "Setting", "/users/#{session[:user_id]}/edit"
                = link_to 'Sign out', logout_path, :method => :delete
      - else
        %ul.nav.pull-right
          %li{:class =>"#{'active' if params[:controller] == 'users' }" }
            = link_to "Sign up", signup_path, :class => "navbar-text"
          %li{:class =>"#{'active' if params[:controller] == 'sessions' }" }
            = link_to "Sign in", login_path, :class => "navbar-text"
          %li
            = link_to "Blog", "http://realthematics.com/blog", :class => "navbar-text", :target => "_blank"